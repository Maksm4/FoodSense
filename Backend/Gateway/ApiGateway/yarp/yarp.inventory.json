{
  "ReverseProxy": {
    "Routes": {
      "KitchensRoute": {
        "ClusterId": "InventoryAPICluster",
        "AuthorizationPolicy": "DefaultPolicy",
        "Match": {
          "Path": "/api/kitchens/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/kitchens" },
          { "PathPrefix": "/api/inventory/kitchens" }
        ]
      },
      "ProductsRoute": {
        "ClusterId": "InventoryAPICluster",
        "AuthorizationPolicy": "DefaultPolicy",
        "Match": {
          "Path": "/api/products/{**remainder}"
        },
        "Transforms": [
          { "PathPattern": "/api/inventory/products/{remainder}" }
        ]
      }
    },
    "Clusters": {
      "InventoryAPICluster": {
        "Destinations": {
          "InventoryAPIDestination": { "Address": "K8S_OVERRIDES" }
        }
      }
    }
  }
}