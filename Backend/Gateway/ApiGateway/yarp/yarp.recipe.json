{
  "ReverseProxy": {
    "Routes": {
      "RecipesRoute": {
        "ClusterId": "RecipesAPICluster",
        "AuthorizationPolicy": "DefaultPolicy",
        "Match": { "Path": "/api/recipes/{**remainder}" },
        "Transforms": [ { "PathPattern": "/api/recipes/{remainder}" } ]
      }
    },
    "Clusters": {
      "RecipesAPICluster": {
        "Destinations": {
          "RecipesAPIDestination": { "Address": "K8S_OVERRIDES" }
        }
      }
    }
  }
}